{
  "extends": [
    "config:base",
    ":enablePreCommit",
    "group:allNonMajor",
    "schedule:weekly"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^tests\\/functional\\/fixtures\\/.env$"
      ],
      "matchStrings": [
        "GITLAB_TAG=(?<currentValue>.*?)\n"
      ],
      "depNameTemplate": "gitlab/gitlab-ce",
      "datasourceTemplate": "docker",
      "versioningTemplate": "loose"
    }
  ],
  "packageRules": [
    {
      "packagePatterns": [
        "^gitlab\/gitlab-.+$"
      ],
      "automerge": true
    },
    {
      "matchPackagePrefixes": [
        "types-"
      ],
      "groupName": "typing dependencies"
    }
  ]
}
